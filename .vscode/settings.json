{
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.enabled": true,
    "editor.formatOnSave": false,
    "editor.rulers": [
        80,
        120
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".vscode": true,
        "**/*.pyc": true,
    },
    "workbench.editor.enablePreview": false,
    "editor.minimap.enabled": true,
    "python.linting.pylintArgs": [
        "--disable=C0111",
    ],
    // "python.pythonPath": "/media/linux/projects/hopofy/venv/bin/",
    "cSpell.words": [
        "behaviour",
        "clion",
        "deconstructible",
        "dgroups",
        "drun",
        "goland",
        "gruvbox",
        "hexlify",
        "hopofy",
        "kscreen",
        "libqtile",
        "Listbox",
        "myusers",
        "nemo",
        "nord",
        "oninput",
        "pactl",
        "pavucontrol",
        "picom",
        "Popen",
        "psycopg",
        "qtile",
        "rasi",
        "rofi",
        "toscreen",
        "unsplit",
        "urandom",
        "windowcd",
        "xcolor",
        "xfce",
        "xprop"
    ],
    "cSpell.ignoreRegExpList": [
        "/[\\u0621-\\u064A]+/"
    ],
}
